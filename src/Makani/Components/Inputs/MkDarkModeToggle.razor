@using Makani.Utilities
@namespace Makani
@inject IElementUtils ElementUtils

<button @onclick="Toggle" class="bg-transparent px-4 py-2">
    @if (DarkModeEnabled)
    {
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <title>Dark mode enabled</title>
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
        </svg>
    }
    else
    {
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <title>Dark mode disabled</title>
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
    }
</button>
@code {
    protected override async Task OnInitializedAsync()
    {
        // todo: move to a service and track there to avoid 
        // making a JS call every time this is rendered
        DarkModeEnabled = await ElementUtils.IsDarkMode();
    }

    public bool DarkModeEnabled { get; set; }

    public async Task Toggle()
    {
        DarkModeEnabled = !DarkModeEnabled;
        await ElementUtils.ChangeDarkMode(DarkModeEnabled);
    }
}

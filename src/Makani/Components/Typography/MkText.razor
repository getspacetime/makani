@namespace Makani
@inherits MkComponent

@switch (Type)
{
    case Typo.H1:
        <h1 class="text-2xl sm:text-3xl font-extrabold leading-6 antialiased text-slate-900 tracking-tight dark:text-slate-200 mb-4 @Css">@ChildContent</h1>
        @* <h1 class="text-4xl text-gray-800 dark:text-gray-50 font-bold tracking-wide my-4 @Css">@ChildContent</h1> *@
        break;
    case Typo.H2:
        <h2 class="text-xl text-slate-900 dark:text-slate-200 font-bold tracking-wide my-4 @Css">@ChildContent</h2>
        break;
    case Typo.H3:
        <h3 class="flex whitespace-pre-wrap -ml-4 pl-4 font-semibold text-lg mb-2.5 text-slate-900 dark:text-slate-200 @Css">@ChildContent</h3>
        break;
    case Typo.H4:
        <h4 class="group flex whitespace-pre-wrap -ml-4 pl-4 mb-2 text-sm leading-6 antialiased text-sky-500 font-semibold tracking-normal dark:text-sky-400 @Css">@ChildContent</h4>
        break;
    case Typo.H5:
        <h5 class="text-base text-gray-800 dark:text-gray-50 font-bold tracking-wide mt-4 @Css">@ChildContent</h5>
        break;
    case Typo.H6:
        <h6 class="text-sm text-gray-800 dark:text-gray-50 font-bold tracking-wide mt-4 @Css">@ChildContent</h6>
        break;
    case Typo.Caption:
        <span class="font-medium text-sm text-gray-500 font-mono mb-3 dark:text-gray-400 @Css">@ChildContent</span>
        break;
    case Typo.Subtitle:
        <p class="mt-2 text-lg text-slate-700 dark:text-slate-400 @Css">@ChildContent</p>
        break;
        case Typo.Section:
            <p class="mb-2 text-sm leading-6 font-semibold text-sky-500 dark:text-sky-400 @Css">@ChildContent</p>
            break;
    case Typo.Body:
    default:
        <p class="text-base text-gray-800 dark:text-gray-50 my-2 @Css">@ChildContent</p>
        break;
}


@code {

    [Parameter]
    public Typo Type { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

}